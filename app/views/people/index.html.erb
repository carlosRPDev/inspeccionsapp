<div class="container">

  <h1>Personas</h1>

  <%= link_to "Agregar asesor(a)", new_person_path, class: "form-group btn btn-secondary btn-sm" %>

  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="thead-light">
        <th>Id</th>
        <th>Cedula</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Rol</th>
        <th></th>
        <th></th>
      </thead>
      <% @person.each do |person| %>
        <tr>
          <td><%= person.id %></td>
          <td><%= person.cedula %></td>
          <td><%= person.name %></td>
          <td><%= person.last_name %></td>
          <td>
            <% p=Position.find(person.position_id) %><%= p.description %>
          </td>
          <td><%= link_to "Editar", edit_person_path(person), class: "btn btn-secondary btn-sm" %></td>
          <td><%= link_to "Eliminar", person, method: :delete, data: { confirm: "Â¿Estas seguro de eliminar asesor(a)"}, class: "btn btn-secondary btn-sm" %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
