<div id="people-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>

      <%= form_for @person, remote: true do |f| %>
        <div class="modal-body">
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <%= f.text_field :cedula, placeholder: "cedula", class: "form-group form-control shadow" %>
          <%= f.text_field :name, placeholder: "Nombre", class: "form-group form-control shadow" %>
          <%= f.text_field :last_name, placeholder: "Apellido", class: "form-group form-control shadow" %>
          <%= f.select :position_id, options_for_select(Position.all.collect { |t| [t.description, t.id]}), {}, class: "form-group form-control custom-select shadow" %>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-success btn-sm shadow", title: "Agregar persona" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
