<div class="container pt-3">
  <div class="card shadow bg-light">
    <div class="card-body">
      <h1 class="card-title"><%= form_title_person %></h1>
      <%= form_for @person do |f| %>
      <div class="row">
        <div class="col-sm">
          <%= f.text_field :cedula, placeholder: "cedula", class: "form-group form-control" %>
        </div>
        <div class="col-sm">
          <%= f.text_field :name, placeholder: "Nombre", class: "form-group form-control" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm">
          <%= f.text_field :last_name, placeholder: "Apellido", class: "form-group form-control" %>
        </div>
        <div class="col-sm">
          <%= f.select :position_id, options_for_select(Position.all.collect { |t| [t.description, t.id]}), {}, class: "form-group custom-select" %>
        </div>
      </div>
      <div class="card-footer text-center">
        <div class="row">
          <div class="col-sm">
            <%= f.submit form_title_person, class: "form-group btn btn-success btn-sm" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
