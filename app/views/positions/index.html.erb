<div class="container pt-3">
  <div class="card shadow bg-light">

    <div class="d-flex p-2">
      <%= fa_icon "question", class: "btn btn-info btn-sm shadow", title: "Aqui encontraras toda la informacion acerca de los tipos de cargos, tambien puede agregar, eliminar y editar cargos." %>
    </div>

    <div class="card-body">

      <div class="card-title d-flex justify-content-between align-items-center">
        <h1>Cargos</h1>
        <%= link_to (fa_icon "plus-square"), new_position_path, class: "btn btn-success btn-sm shadow", title: "Agregar cargo", remote: true %>
      </div>

      <div class="table table-responsive shadow text-center">
        <table class="table table-hover table-sm small">
          <thead class="thead-light">
            <tr>
              <th>Id</th>
              <th>Descripcion</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @position.each do |position| %>
            <%= render "row", position: position %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
