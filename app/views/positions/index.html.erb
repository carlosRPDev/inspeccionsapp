<div class="container pt-3">
  <div class="card shadow bg-light">
    <div class="card-body">
      <h1 class="card-title">Cargos</h1>
      <div class="text-right">
        <%= link_to "Agregar Cargo", new_position_path, class: "form-group btn btn-success btn-sm" %>
      </div>
      <div class="table table-responsive">
        <table class="table table-hover table-sm">
          <thead class="thead-light">
            <th>Id</th>
            <th>Descripcion</th>
            <th></th>
            <th></th>
          </thead>
          <% @position.each do |position| %>
          <tr>
            <td><%= position.id %></td>
            <td><%= position.description %></td>
            <td><%= link_to "Editar", edit_position_path(position), class: "btn btn-secondary btn-sm" %></td>
            <td><%= link_to "Eliminar", position, method: :delete, data: { confirm: "Â¿Estas seguro de eliminar este cargo?"}, class: "btn btn-danger btn-sm" %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
