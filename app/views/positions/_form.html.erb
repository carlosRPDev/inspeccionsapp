<div class="container pt-3">
  <div class="card shadow bg-light">
    <div class="card-body">
      <h1 class="card-title"><%= form_title_position %></h1>
      <%= form_for @position do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.text_field :description, placeholder: "Ingresa el tipo de cargo", class: "form-group form-control" %>
        </div>
      </div>
      <div class="card-footer text-center">
        <div class="row">
          <div class="col-sm">
            <%= f.submit form_title_position, class: "form-group btn btn-success btn-sm" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
