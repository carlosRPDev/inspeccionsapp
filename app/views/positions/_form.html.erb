<div id="position-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>

      <%= form_for @position, remote: true do |f| %>
        <div class="modal-body">
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <%= f.text_field :description, placeholder: "Ingresa el tipo de cargo", class: "form-group form-control shadow" %>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-success btn-sm shadow", title: "Agregar cargo" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
