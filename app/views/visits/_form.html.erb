<div id="visit-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>

      <%= form_for @visit, remote: true do |f| %>
        <div class="modal-body">
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <%= f.datetime_field :date, class: "form-group form-control shadow" %>
          <%= f.select :person_id, options_for_select(Person.all.collect { |t| [t.name, t.id]}), {}, class: "form-group form-control custom-select shadow" %>
        </div>
        <div class="modal-footer">
          <%= f.submit class: "btn btn-success btn-sm shadow", title: "Agregar visita" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
