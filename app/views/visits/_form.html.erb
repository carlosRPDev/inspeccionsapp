<div class="container pt-3">
  <div class="card shadow bg-light">
    <div class="card-body">
      <h1 class="card-title"><%= form_title_visits %></h1>
      <%= form_for @visit do |f| %>
      <div class="row">
        <div class="col-sm">
          <%= f.datetime_field :date, class: "form-group form-control" %>
        </div>
        <div class="col-sm">
          <%= f.select :person_id, options_for_select(Person.all.collect { |t| [t.cedula, t.id]}), {}, class: "form-group custom-select" %>
        </div>
      </div>
      <div class="card-footer text-center">
        <div class="row">
          <div class="col-sm">
            <%= f.submit form_title_visits, class: "form-group btn btn-success btn-sm"%>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
